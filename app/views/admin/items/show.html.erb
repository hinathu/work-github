<!--商品詳細画面-->
<div class="container my-5">
  <%= render 'admin/header' %>

<div class="row mt-5">
  <h3>商品詳細</h3>
  <div class="row mt-5">
    <div class="col-lg-4">
    <%= image_tag @item.image, size: "150x150" %>
    </div>
    <div class="col-lg-8">
    <table class="table text-left table-borderless">
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</br>(税抜価格)</td>
          <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success mt-3 mx-auto" %></td>
        </tr>
      </tbody>
    </table>
    </div>
    </div>
</div>
</div>