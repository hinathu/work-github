<!--商品一覧画面-->

<div class="container my-5">
  <%= render 'admin/header' %>

<div class="row mt-5">
  <h3>商品一覧</h3>
</div>
<div class="row my-3">
  <%= link_to "商品追加", new_admin_item_path, class: "btn btn-success" %>
</div>
<div class="row">
  <table class="table text-left">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name  %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %>円</td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
	<div class="row">
	 <div class="col-md-4 offset-md-4 py-2 mt-5">
	 	<%= paginate @items %>
	 </div>
	</div>
</div>

</div>