<!--配送先編集画面ページ-->
<div class="container my-5">
    <%= render 'public/header' %>

<div class="row mt-5">
    <h3>配送先編集</h3>
</div>

<div class="row mt-5">
    <div class="offset-4 col-4">
        <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="form-group">
            <%= f.label :"郵便番号", class: "brown-border px-3 pb-1" %>
            <%= f.number_field :postal_code, class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-group">
            <%= f.label :"住所", class: "brown-border px-3 pb-1" %>
            <%= f.text_area :address, class: "form-control offset-1 col-10" %>
        </div>
        <div class="form-group">
            <%= f.label :"宛名", class: "brown-border px-3 pb-1" %>
            <%= f.text_field :name, class: "form-control offset-1 col-10"%>
        </div>
        <div class="row">
            <%= f.submit '変更内容を保存', class: "btn btn-success mx-auto mt-3" %>
        <% end %>
        </div>
    </div>
</div>
</div>