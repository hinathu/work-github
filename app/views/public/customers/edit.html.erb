<!--会員情報編集画面-->
<div class="container my-5">
  <%= render 'public/header' %>

<div class="row d-flex justify-content-center">
  <% if flash[:customer_updated_error] %>
    <span class="text-danger"><%= flash[:customer_updated_error] %></span>
  <% end %>
</div>

<div class="row mt-5">
  <h3>会員情報編集</h3>
</div>

<%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.number_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_area :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.telephone_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit '編集内容を保存', class: "btn btn-success" %></td>
      <td><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
</table>
<% end %>
</div>